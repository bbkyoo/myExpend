<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.myexpense.repository.CalculateRepository">	<!-- xml파일을 사용할 mapper가 있는 경로 -->
    <!-- <select> 태그를 이용하여 select 쿼리임을 나타냄. 앞서 mapper에서 말했던 메소드의 이름은 select 쿼리의 id값과 같아야함. -->
    <insert id="insertExpendList" parameterType="com.example.myexpense.dto.CalculateDto">
		<![CDATA[
        insert into expend_list(consumption_type, expend_money)
        values (#{consumptionType}, #{expendMoney})
        ]]>
	</insert>
</mapper>